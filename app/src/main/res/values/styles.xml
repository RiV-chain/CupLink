<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dropDownListViewStyle">@style/MySpinner</item>
        <item name="android:textColor">@color/light_light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textColorPrimary">@color/light_light_grey</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="spinnerStyle">@style/MySpinner</item>
        <!-- Set the default popup menu style -->
        <item name="popupMenuBackground">@color/colorPrimaryDark</item>
        <item name="dropDownBackgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@null</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/selectedColor</item>

    </style>
    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/headline_text_size</item>
    </style>

    <style name="MySpinner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/light_grey</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditText.OutlinedBox" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColorHint"> @color/white </item>
        <item name="hintTextColor"> @color/white </item>
        <item name="android:paddingTop"> 5dp </item>
    </style>

    <style name="FullPPTCDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@drawable/dialog_rounded_corner</item>
        <item name="android:windowBackground">@drawable/dialog_rounded_corner</item>
        <item name="android:textColor">@color/light_light_grey</item>
        <item name="android:textColorPrimary">@color/light_light_grey</item>
        <item name="android:colorAccent">@color/light_light_grey</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomAlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomAlertDialogButton</item>
    </style>

    <style name="PPTCDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/light_light_grey</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomAlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomAlertDialogButton</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomAlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom style for the popup items -->
    <style name="CustomPopupItem">
        <item name="android:layout_height">48dp</item> <!-- Set the desired height -->
        <item name="android:background">?attr/selectableItemBackground</item> <!-- Use a theme attribute or a custom background color -->
        <item name="android:textColor">@color/light_grey</item> <!-- Use a theme attribute or a custom text color -->
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Custom style for the popup background -->
    <style name="CustomPopupBackground">
        <item name="android:background">@color/colorPrimaryDark</item> <!-- Define a custom background color -->
    </style>
</resources>
