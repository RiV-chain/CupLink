<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorSecondary">@color/colorTransparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dropDownListViewStyle">@style/MySpinner</item>
        <item name="android:textColor">@color/light_light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textColorPrimary">@color/light_light_grey</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="android:itemBackground">@color/colorTransparent</item>
        <item name="spinnerStyle">@style/MySpinner</item>
        <!-- Set the default popup menu style -->
        <item name="popupMenuBackground">@color/colorTransparent</item>
        <item name="dropDownBackgroundTint">@color/colorTransparent</item>
    </style>

    <style name="MySpinner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/light_grey</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">

    </style>

    <style name="EditText.OutlinedBox" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColorHint"> @color/white </item>
        <item name="hintTextColor"> @color/white </item>
        <item name="android:paddingTop"> 5dp </item>
    </style>

    <style name="PPTCDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/light_light_grey</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomAlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomAlertDialogButton</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <style name="MessageDialog" parent="PPTCDialog">
        <item name="android:windowMinWidthMajor">40%</item>
        <item name="android:windowMinWidthMinor">40%</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomAlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for rounded corners on ImageView -->
    <style name="RoundedCornerImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/image_corner_radius</item> <!-- Adjust this value as needed -->
    </style>

    <!-- Customize BottomNavigationView active label -->
    <style name="CustomBottomNavActiveLabel" parent="TextAppearance.AppCompat">

    </style>

    <!-- Customize BottomNavigationView inactive label -->
    <style name="CustomBottomNavInactiveLabel" parent="TextAppearance.AppCompat">

    </style>
</resources>
