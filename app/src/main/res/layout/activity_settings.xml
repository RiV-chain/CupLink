<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_bold"
                android:text="@string/title_settings"
                android:textSize="@dimen/headline_text_size" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:paddingBottom="80dp"
        android:scrollbarThumbVertical="@color/selectedColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/basicSettingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_20"
            android:layout_marginEnd="@dimen/padding_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/settingsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/settings_name"
                    android:textSize="@dimen/title_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/padding_20"/>

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/options_text_size"
                    app:layout_constraintEnd_toEndOf="@id/settingsName"
                    app:layout_constraintTop_toTopOf="@id/settingsName"
                    app:layout_constraintBottom_toBottomOf="@id/settingsName"/>

                <TextView
                    android:id="@+id/settingsNightModes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/settings_nightmode"
                    android:textSize="@dimen/title_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/settingsName"
                    android:layout_marginTop="@dimen/padding_40"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutNightMode"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/light_light_grey"
                    android:paddingEnd="-15dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:layout_constraintEnd_toEndOf="@id/settingsNightModes"
                    app:layout_constraintTop_toTopOf="@id/settingsNightModes"
                    app:layout_constraintBottom_toBottomOf="@id/settingsNightModes"
                    app:endIconTint="@color/white"
                    android:paddingBottom="@dimen/padding_4">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerNightModes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/options_text_size"
                        android:paddingEnd="@dimen/autocomplete_textview_padding"
                        android:textAlignment="viewEnd"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/blockUnknown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/blockUnknownSwitch"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/settings_block_unknown"
                    android:textSize="@dimen/title_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayoutNightMode"
                    android:layout_marginTop="@dimen/padding_20"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/blockUnknownSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:theme="@style/SwitchTheme"
                    android:contentDescription="@string/settings_block_unknown"
                    app:layout_constraintEnd_toEndOf="@id/blockUnknown"
                    app:layout_constraintTop_toTopOf="@id/blockUnknown"
                    app:layout_constraintBottom_toBottomOf="@id/blockUnknown"/>

                <TextView
                    android:id="@+id/editPeersText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/peers"
                    android:textSize="@dimen/title_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/blockUnknownSwitch"
                    android:layout_marginTop="@dimen/padding_40"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editPeers"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="110dp"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/next_button_background"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/editPeersText"
                    app:layout_constraintTop_toTopOf="@id/editPeersText"
                    app:layout_constraintBottom_toBottomOf="@id/editPeersText"/>

                <TextView
                    android:id="@+id/startOnBootup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/settings_start_on_bootup"
                    android:textSize="@dimen/title_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editPeers"
                    android:layout_marginTop="@dimen/padding_25"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/startOnBootupSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:theme="@style/SwitchTheme"
                    app:layout_constraintEnd_toEndOf="@id/startOnBootup"
                    app:layout_constraintTop_toTopOf="@id/startOnBootup"
                    app:layout_constraintBottom_toBottomOf="@id/startOnBootup"/>

                <TextView
                    android:id="@+id/settingsModes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/settings_settings_mode"
                    android:textSize="@dimen/title_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/startOnBootupSwitch"
                    android:layout_marginTop="@dimen/padding_40"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutSettingsModes"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="-15dp"
                    android:textColorHint="@color/light_light_grey"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconTint="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/settingsModes"
                    app:layout_constraintTop_toTopOf="@id/settingsModes"
                    app:layout_constraintBottom_toBottomOf="@id/settingsModes"
                    android:paddingBottom="@dimen/padding_4">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerSettingsModes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/options_text_size"
                        android:paddingEnd="@dimen/autocomplete_textview_padding"
                        android:textAlignment="viewEnd"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/advancedSettingsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_20"
                android:layout_marginEnd="@dimen/padding_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/basicSettingsLayout"
                android:visibility="gone">

                    <TextView
                        android:id="@+id/automaticStatusUpdates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_automatic_status_updates"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/padding_20" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/automaticStatusUpdatesSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme"
                        app:layout_constraintEnd_toEndOf="@id/automaticStatusUpdates"
                        app:layout_constraintTop_toTopOf="@id/automaticStatusUpdates"
                        app:layout_constraintBottom_toBottomOf="@id/automaticStatusUpdates"/>

                    <TextView
                        android:id="@+id/enableMicrophoneByDefault"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_enable_microphone_by_default"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/automaticStatusUpdates"
                        android:layout_marginTop="@dimen/padding_40"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/enableMicrophoneByDefaultSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme"
                        app:layout_constraintEnd_toEndOf="@id/enableMicrophoneByDefault"
                        app:layout_constraintTop_toTopOf="@id/enableMicrophoneByDefault"
                        app:layout_constraintBottom_toBottomOf="@id/enableMicrophoneByDefault"/>

                    <TextView
                        android:id="@+id/enableCameraByDefault"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_enable_camera_by_default"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/enableMicrophoneByDefaultSwitch"
                        android:layout_marginTop="@dimen/padding_40"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/enableCameraByDefaultSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme"
                        app:layout_constraintEnd_toEndOf="@id/enableCameraByDefault"
                        app:layout_constraintTop_toTopOf="@id/enableCameraByDefault"
                        app:layout_constraintBottom_toBottomOf="@id/enableCameraByDefault"/>

                    <TextView
                        android:id="@+id/selectFrontCameraByDefault"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_select_front_camera_by_default"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/enableCameraByDefaultSwitch"
                        android:layout_marginTop="@dimen/padding_40"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/selectFrontCameraByDefaultSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme"
                        app:layout_constraintEnd_toEndOf="@id/selectFrontCameraByDefault"
                        app:layout_constraintTop_toTopOf="@id/selectFrontCameraByDefault"
                        app:layout_constraintBottom_toBottomOf="@id/selectFrontCameraByDefault"/>

                    <TextView
                        android:id="@+id/videoDegradationModeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_video_degradation_mode"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/selectFrontCameraByDefaultSwitch"
                        android:layout_marginTop="@dimen/padding_40"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutVideoDegradationModes"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="-15dp"
                        android:textColorHint="@color/light_light_grey"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconTint="@color/white"
                        app:layout_constraintEnd_toEndOf="@id/videoDegradationModeText"
                        app:layout_constraintTop_toTopOf="@id/videoDegradationModeText"
                        app:layout_constraintBottom_toBottomOf="@id/videoDegradationModeText"
                        android:paddingBottom="@dimen/padding_4">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerVideoDegradationModes"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/options_text_size"
                            android:paddingEnd="@dimen/autocomplete_textview_padding"
                            android:textAlignment="viewEnd"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/cameraResolutionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_camera_resolution"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutVideoDegradationModes"
                        android:layout_marginTop="@dimen/padding_25"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutCameraResolution"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="-15dp"
                        android:textColorHint="@color/light_light_grey"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:layout_constraintEnd_toEndOf="@id/cameraResolutionText"
                        app:layout_constraintTop_toTopOf="@id/cameraResolutionText"
                        app:layout_constraintBottom_toBottomOf="@id/cameraResolutionText"
                        app:endIconTint="@color/white"
                        android:paddingBottom="@dimen/padding_4">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerCameraResolution"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/options_text_size"
                            android:paddingEnd="@dimen/autocomplete_textview_padding"
                            android:textAlignment="viewEnd"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/cameraFramerateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_camera_framerate"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCameraResolution"
                        android:layout_marginTop="@dimen/padding_25"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutCameraFramerate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="-15dp"
                        android:textColorHint="@color/light_light_grey"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:layout_constraintEnd_toEndOf="@id/cameraFramerateText"
                        app:layout_constraintTop_toTopOf="@id/cameraFramerateText"
                        app:layout_constraintBottom_toBottomOf="@id/cameraFramerateText"
                        app:endIconTint="@color/white"
                        android:paddingBottom="@dimen/padding_4">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerCameraFramerate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/options_text_size"
                            android:paddingEnd="@dimen/autocomplete_textview_padding"
                            android:textAlignment="viewEnd"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/promptOutgoingCalls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_prompt_outgoing_calls"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCameraFramerate"
                        android:layout_marginTop="@dimen/padding_20"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/promptOutgoingCallsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme"
                        app:layout_constraintEnd_toEndOf="@id/promptOutgoingCalls"
                        app:layout_constraintTop_toTopOf="@id/promptOutgoingCalls"
                        app:layout_constraintBottom_toBottomOf="@id/promptOutgoingCalls"/>

                    <TextView
                        android:id="@+id/showUsernameAsLogo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_show_username_as_logo"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/promptOutgoingCallsSwitch"
                        android:layout_marginTop="@dimen/padding_40"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/showUsernameAsLogoSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme"
                        app:layout_constraintEnd_toEndOf="@id/showUsernameAsLogo"
                        app:layout_constraintTop_toTopOf="@id/showUsernameAsLogo"
                        app:layout_constraintBottom_toBottomOf="@id/showUsernameAsLogo"/>

                    <TextView
                        android:id="@+id/pushToTalk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_push_to_talk"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/showUsernameAsLogo"
                        android:layout_marginTop="@dimen/padding_40"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/pushToTalkSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme"
                        app:layout_constraintEnd_toEndOf="@id/pushToTalk"
                        app:layout_constraintTop_toTopOf="@id/pushToTalk"
                        app:layout_constraintBottom_toBottomOf="@id/pushToTalk"/>

                    <TextView
                        android:id="@+id/addressLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_addresses"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pushToTalkSwitch"
                        android:layout_marginTop="@dimen/padding_40"/>

                    <TextView
                        android:id="@+id/addressTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:singleLine="true"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="@dimen/options_text_size"
                        android:ellipsize="middle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/addressLayout"
                        app:layout_constraintBottom_toBottomOf="@id/addressLayout"
                        app:layout_constraintStart_toEndOf="@id/addressLayout"/>

                    <TextView
                        android:id="@+id/textSpeakerphoneModes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_speakerphone_mode"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/addressTv"
                        android:layout_marginTop="@dimen/padding_40"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutSpeakerphoneModes"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="-15dp"
                        android:textColorHint="@color/light_light_grey"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:layout_constraintEnd_toEndOf="@id/textSpeakerphoneModes"
                        app:layout_constraintTop_toTopOf="@id/textSpeakerphoneModes"
                        app:layout_constraintBottom_toBottomOf="@id/textSpeakerphoneModes"
                        app:endIconTint="@color/white"
                        android:paddingBottom="@dimen/padding_4">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerSpeakerphoneModes"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/options_text_size"
                            android:paddingEnd="@dimen/autocomplete_textview_padding"
                            android:textAlignment="viewEnd"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/databasePasswordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_database_password"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutSpeakerphoneModes"
                        android:layout_marginTop="@dimen/padding_20"/>

                    <TextView
                        android:id="@+id/databasePasswordTv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="@dimen/options_text_size"
                        app:layout_constraintEnd_toEndOf="@id/databasePasswordLayout"
                        app:layout_constraintTop_toTopOf="@id/databasePasswordLayout"
                        app:layout_constraintBottom_toBottomOf="@id/databasePasswordLayout"/>

                    <TextView
                        android:id="@+id/menuPasswordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/settings_menu_password"
                        android:textSize="@dimen/title_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/databasePasswordTv"
                        android:layout_marginTop="@dimen/padding_40"/>

                    <TextView
