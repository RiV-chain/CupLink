<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/dialog_rounded_corner">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reminderTopicLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:boxBackgroundMode="none"
            android:background="@drawable/edit_text_rounded_corner"
            android:textColorHint="@color/light_grey">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reminderTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reminder Topic"
                android:inputType="textAutoComplete"
                android:textColor="@color/light_grey"
                android:textCursorDrawable="@null"
                android:focusedByDefault="true"
                style="@style/EditText.OutlinedBox"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/datePickerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:boxBackgroundMode="none"
            android:background="@drawable/edit_text_rounded_corner"
            android:textColorHint="@color/light_grey">
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:headerBackground="@drawable/flag_transparent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/timePickerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:boxBackgroundMode="none"
            android:background="@drawable/edit_text_rounded_corner"
            android:textColorHint="@color/light_grey">
            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Add"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/schema"
            app:layout_constraintTop_toBottomOf="@+id/ccp"
            android:background="@drawable/next_button_background"
            app:backgroundTint="@null"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>
