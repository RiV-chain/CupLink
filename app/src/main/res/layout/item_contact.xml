<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Main User Icon -->
    <ImageView
        android:id="@+id/contactIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_contacts"
        android:scaleType="centerCrop"/>

    <!-- Small Status Circle (half overlapping main icon) -->
    <ImageView
        android:id="@+id/contactStatus"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintEnd_toEndOf="@id/contactIcon"
        app:layout_constraintBottom_toBottomOf="@id/contactIcon"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp" />

    <!-- User Name Text -->
    <TextView
        android:id="@+id/contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contactIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>