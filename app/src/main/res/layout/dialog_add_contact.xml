<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="10dp">

    <TextView
        android:id="@+id/add_contact_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/NameEditLayout"
        android:textSize="23sp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/enter_contact_name"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NameEditLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/padding_20"
        android:layout_marginEnd="@dimen/padding_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_contact_textview"
        app:layout_constraintBottom_toTopOf="@+id/CancelButton"
        app:boxBackgroundMode="none"
        android:background="@drawable/edit_text_rounded_corner"
        android:textColorHint="@color/light_grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/NameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contact_name"
            android:importantForAutofill="no"
            android:gravity="center_horizontal"
            android:inputType="textNoSuggestions"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/light_grey"
            android:textCursorDrawable="@null"
            style="@style/EditText.OutlinedBox"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:background="@drawable/next_button_background"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        android:id="@+id/CancelButton"
        android:layout_width="125dp"
        android:layout_height="@dimen/padding_50"
        android:layout_marginStart="@dimen/padding_50"
        android:layout_marginTop="@dimen/padding_20"
        app:layout_constraintTop_toBottomOf="@+id/NameEditLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/OkButton"
        android:fontFamily="@font/lato_bold"
        android:textSize="18sp"
        android:text="@string/button_cancel"
        android:textColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:background="@drawable/next_button_background"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        android:id="@+id/OkButton"
        android:layout_width="125dp"
        android:layout_height="@dimen/padding_50"
        android:layout_marginStart="@dimen/padding_50"
        android:layout_marginEnd="@dimen/padding_50"
        android:layout_marginTop="@dimen/padding_20"
        app:layout_constraintTop_toBottomOf="@+id/NameEditLayout"
        app:layout_constraintStart_toEndOf="@+id/CancelButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/lato_bold"
        android:textSize="18sp"
        android:text="@string/button_ok"
        android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
